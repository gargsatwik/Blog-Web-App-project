<%- include('partials/header.ejs') %>
<body>
  <h1>Edit blog</h1>
    <form action="/edit-blog/<%= blogIndex %>" method="post">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" maxlength="250" required value="<%= blog.title %>">
      <br>
      <label for="subtitle">Subtitle:</label>
      <input type="text" id="subtitle" name="subtitle" maxlength="250" required value="<%= blog.subtitle %>"> 
      <br>
      <label for="body">Body:</label>
      <textarea id="body" name="body" rows="10" cols="50" required><%= blog.body %></textarea>
      <br>
      <label for="author">Author:</label>
      <input type="text" id="author" name="author" maxlength="250" required value="<%= blog.author %>">
      <br>
      <label for="img_url">Image URL:</label>
      <input type="url" id="img_url" name="img_url" maxlength="250" required value="<%= blog.img_url %>">
      <br>
      <button type="submit">Update blog</button>
    </form> 
</body>
<%- include('partials/footer.ejs') %>
